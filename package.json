{
    "version": "0.0.4",
    "name": "xstream-redux-observable",
    "author": "adz5a",
    "main": "./es5/index.js",
    "directories": {
      "lib": [
        "./lib",
        "./es5"
      ]
    },
    "types": "./lib/createMiddleware.d.ts",
    "dependencies": {
        "typescript": "^2.5.2"
    },
    "devDependencies": {
        "babel-jest": "^21.0.0",
        "babel-preset-env": "^1.6.0",
        "jest": "20.0.4",
        "redux": "^3.7.2",
        "xstream": "^10.9.0"
    },
    "peerDependencies": {
        "redux": "^3.7.2",
        "xstream": "^10.9.0"
    },
    "scripts": {
        "test": "node scripts/test.js --env=jsdom",
        "test:watch": "node scripts/test.js --env=jsdom --watch",
        "compile:watch": "tsc --watch --target es6",
        "compile": "tsc --target es6 --outDir lib --module es6 && tsc --target es5 --module commonjs --outDir es5",
        "clean": "rm -rf ./dist ./es5",
        "_publish": "npm run clean && npm run compile"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/lib/"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}"
        ],
        "setupFiles": [],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.js?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/scripts/processFiles",
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        },
        "moduleFileExtensions": [
            "web.js",
            "js",
            "json",
            "web.jsx",
            "jsx",
            "ts",
            "tsx",
            "node"
        ]
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "node": true
                    }
                }
            ]
        ]
    }
}
